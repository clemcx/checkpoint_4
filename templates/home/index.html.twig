{% extends 'base.html.twig' %}
 {% block body %}
  <main id="mainHome">
      <section id="lastReviews">
          <h2> Last Reviews</h2>
           {% for review in lastReviews %}
           <p>
               <a href="{{ path('work_show', {'id': review.work.id})  }}">  {{ review.work.title|title }}</a> {{ review.publishedDate | date('d/M/Y') }}</p>
           {% endfor %}
      </section>
   <section id="current Favorite">
       <h2> Recent Most Like</h2>
       {% for review in currentFavs %}
           <p>
               <a href="{{ path('work_show', {'id': review.work.id})  }}">  {{ review.work.title |title}}</a> </p>
       {% endfor %}
   </section>
      <section id="bestReviews">
          <h2> All Times Favourites</h2>
            {% for review in bestReviews  %}
           <p>
             {{ review.work.title }} {{ review.rating }}/10
           </p>
            {% endfor %}
          <a href="">see more</a>
       </section>
   </main>

{% endblock %}
